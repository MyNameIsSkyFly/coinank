<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar2" layout="@layout/toolbar_main"></include>

    <RelativeLayout
        android:id="@+id/rl_small"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:orientation="horizontal"
        android:padding="@dimen/setting_item_padding"
        >

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/s_font_small"
            android:textColor="@color/blackgray"
            android:textSize="@dimen/font_sz_setting" />

        <ImageView
            android:id="@+id/iv_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ckbox_sel_l" />
    </RelativeLayout>
    <com.ruffian.library.widget.RView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:background_normal="@color/lv_line"
        >
    </com.ruffian.library.widget.RView>
    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:orientation="horizontal"
        android:padding="@dimen/setting_item_padding"
        >

        <TextView
            android:id="@+id/tv_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/s_font_middle"
            android:textColor="@color/blackgray"
            android:textSize="@dimen/font_sz_setting" />



        <ImageView
            android:id="@+id/iv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ckbox_sel_l" />
    </RelativeLayout>
    <com.ruffian.library.widget.RView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:background_normal="@color/lv_line"
        >
    </com.ruffian.library.widget.RView>
    <RelativeLayout
        android:id="@+id/rl_large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height"
        android:orientation="horizontal"
        android:padding="@dimen/setting_item_padding"
        >

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/s_font_large"
            android:textColor="@color/blackgray"
            android:textSize="@dimen/font_sz_setting" />

        <ImageView
            android:id="@+id/iv_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/ckbox_sel_l" />
    </RelativeLayout>
    <com.ruffian.library.widget.RView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:background_normal="@color/lv_line"
        >
    </com.ruffian.library.widget.RView>

    <com.ruffian.library.widget.RView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:background_normal="@color/lv_line"
        >
    </com.ruffian.library.widget.RView>

    <com.ruffian.library.widget.RView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:background_normal="@color/lv_line"
        >
    </com.ruffian.library.widget.RView>

</LinearLayout>
