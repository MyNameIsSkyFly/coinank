<?xml version="1.0" encoding="utf-8"?>
<com.ruffian.library.widget.RRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/symbol_hlistview"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    app:background_normal="@color/transparent_color"
    app:background_selected="@color/symbol_bg"
    app:corner_radius="5dp"
    >

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="BTC"
        android:textColor="@color/black_white"
        android:textSize="14sp" />
</com.ruffian.library.widget.RRelativeLayout>